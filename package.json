{
  "name": "wooster",
  "version": "0.4.0",
  "description": "simple JavaScript error detection/parser/simplifier/highlighter",
  "main": "dist/bundle.min.js",
  "bin": {
    "wooster": "./cli.js"
  },
  "files": [
    "cli.js",
    "dist/bundle.min.js"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm run test:bundle && npm run test && npm run pass",
    "build:source": "browserify --node -s wooster -t [ babelify --presets [ es2015 ] ] src/version2.js -o dist/bundle.js",
    "uglify": "uglifyjs dist/bundle.js -cmo dist/bundle.min.js",
    "build": "npm run build:source && npm run uglify",
    "wbuild": "(npm run build:source && npm run uglify) 2>&1 | wooster",
    "lint": "spacestandard --fix src/**/*.js",
    "test:bundle": "cd test && TEST_SOURCE='../dist/bundle.min.js' tape test-*.js | faucet",
    "test": "cd test && tape test-*.js | faucet",
    "pass": "passlint dist/*.js",
    "coverage": "nyc npm test"
  },
  "keywords": [
    "wooster"
  ],
  "author": "talmobi <talmo.christian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/talmobi/wooster"
  },
  "bugs": {
    "url": "https://github.com/talmobi/wooster/issues",
    "email": "talmo.christian@gmail.com"
  },
  "dependencies": {
    "cli-color": "~1.2.0",
    "convert-source-map": "~1.5.1",
    "minimist": "~1.2.5",
    "source-map": "~0.5.7"
  },
  "devDependencies": {
    "babel-preset-es2015": "https://registry.npmjs.org/babel-preset-es2015/-/babel-preset-es2015-6.24.1.tgz",
    "babelify": "https://registry.npmjs.org/babelify/-/babelify-7.3.0.tgz",
    "browserify": "~14.4.0",
    "csslint": "~1.0.5",
    "faucet": "0.0.1",
    "less": "~2.7.2",
    "node-sass": "~4.14.1",
    "npm-which": "~3.0.1",
    "nyc": "~15.1.0",
    "passlint": "~0.4.0",
    "rollup": "~0.41.6",
    "spacestandard": "~0.3.0",
    "stylus": "~0.54.8",
    "tape": "~5.0.1",
    "uglify-js": "https://registry.npmjs.org/uglify-js/-/uglify-js-2.8.29.tgz",
    "webpack": "~2.6.1"
  }
}
